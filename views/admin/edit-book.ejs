<%- include("partials/header") %>

<style>
  #frm-add-book label.error{
    color: red;
  }

    .image-thumbnail{
      height: 80px;
      width: 80px;
    }
  
</style>

    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Edit Book</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Edit Book</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    
    <section class="content">
      <div class="container-fluid">
        <div class="col-md-12">
          
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">Edit Book</h3>
            </div>
            
            <div class="card-body">
              <form role="form" method="POST" action="/admin/edit-book/<%= book.id %>" id="frm-add-book" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-sm-6">
                    
                    <div class="form-group">
                      <label>Name</label>
                      <input type="text" class="form-control" value="<%= book.name %>" name="name" placeholder="Enter name">
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Category</label>
                      <select required class="form-control" name="dd_category">
                        <option value="">Choose Category</option>
                        <% categories.forEach(function(data){ %>
                        <option <% if(book.categoryId == data.id){%> selected <%}%>  value="<%= data.id %>"><%= data.name %></option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label for="desc">Description</label>
                        <textarea class="form-control" name="description"  id="desc"><%= book.description %></textarea>
                      </div>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Amount
                        <%if(curreny_data!==null){%>
                          (<%= curreny_data.option_value %>)
                        <%}else{%>
                          
                        <%}%>
                      </label>
                      <input type="text" value="<%= book.amount %>" class="form-control" name="amount" min="1" placeholder="Enter amount">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Cover Image</label>
                      <input type="file" name="cover_image" class="form-control">
                      <br>
                      <img class="image-thumbnail" src="<%= book.cover_image %>">
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Author</label>
                      <input type="text" value="<%= book.author %>" class="form-control" name="author" placeholder="Enter author">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Status</label>
                      <select required class="form-control" value="<%= book.status %>" name="dd_status">
                        <option <% if(book.status == "1"){%> selected <%}%> value="1">Active</option>
                        <option <% if(book.status == "0"){%> selected <%}%> value="0">Inactive</option>
                      </select>
                    </div>
                  </div>
                </div>
                <button class="btn btn-success" type="submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    
<%- include("partials/footer") %>
  
 